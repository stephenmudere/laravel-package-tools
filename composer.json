{
    "name": "stephenmudere/laravel-package-tools",
    "description": "Tools for creating Laravel packages",
    "keywords": [
        "spatie",
        "laravel-package-tools"
    ],
    "homepage": "https://github.com/stephenmudere/laravel-package-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "S M",
            "email": "stephenmudere@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0|^8.0",
        "illuminate/contracts": "^5.6"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/test-time": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Stephenmudere\\LaravelPackageTools\\": "src",
            "Stephenmudere\\LaravelPackageTools\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stephenmudere\\LaravelPackageTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
